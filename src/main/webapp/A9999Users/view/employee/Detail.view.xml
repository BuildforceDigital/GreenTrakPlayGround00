<mvc:View
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        controllerName="sap.ui.demo.basicTemplate.controller.employee.Detail">
    <!--binding="{/ProductCollection/2}"
    icon="{ProductPicUrl}"-->
    <Page title="Revision"
          showNavButton="true"
          navButtonPress=".onNavBack">
        <ObjectHeader id="oh1"
                      responsive="true"
                      fullScreenOptimized="true"

                      iconAlt="{Name}"
                      intro="Shift approved by {remoteOData>ApprovalBy} at {path: 'remoteOData>ApprovalDateTime', type: 'sap.ui.model.odata.type.DateTimeOffset', formatOptions: {pattern: 'yyyy-MM-dd HH:mm'}}"
                      title="{remoteOData>UserName}"
                      titleActive="true"
                      titlePress="handleTitlePress"
                      number="{remoteOData>ProjectCode}"

                      showMarkers="true"
                      markFlagged="true"
                      markFavorite="true"
                      numberState="Success"
                      backgroundDesign="Translucent"
                      class="sapUiResponsivePadding--header">

            <ObjectAttribute
                    title="StartDate"
                    text="{path: 'remoteOData>AggStartDate', type: 'sap.ui.model.odata.type.DateTimeOffset', formatOptions: {pattern: 'yyyy-MM-dd'}}"/>
            <ObjectAttribute
                    title="CheckInDateTime"
                    text="{ type: 'sap.ui.model.odata.type.DateTimeOffset', formatOptions: { pattern: 'HH:mm' }, path: 'remoteOData>CheckInDateTime' }"/>
            <ObjectAttribute
                    title="CheckOutDateTime"
                    text="{ type: 'sap.ui.model.odata.type.DateTimeOffset', formatOptions: { pattern: 'HH:mm' }, path: 'remoteOData>CheckOutDateTime' }"/>
            <ObjectAttribute
                    title="TermGuidIn"
                    text="{remoteOData>TermGuidIn}"/>

            <ObjectAttribute
                    title="ProjOwner"
                    text="{remoteOData>ProjOwner}"/>

            <ObjectAttribute
                    title="TermGuidOut"
                    text="{remoteOData>TermGuidOut}"/>
            <ObjectAttribute
                    title="ProjectCode"
                    text="{remoteOData>ProjectCode}"/>
            <ObjectAttribute
                    title="Description"
                    text="{remoteOData>Description}"/>
            <ObjectAttribute
                    title="Remarks"
                    text="{remoteOData>Remarks}"/>
        </ObjectHeader>
        <VBox class="sapUiSmallMargin">
            <Table id="employeesTable" alternateRowColors="true"
                   items="{ path: 'remoteOData>/AttendanceEventsAllEntities',
                            sorter: { descending: true, path : 'Version' } }"
                   itemPress=".onItemPressed">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Reviews" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="employeeIDCol">
                        <header>
                            <Text text="Project Code"/>
                        </header>
                    </Column>
                    <Column id="firstNameCol" hAlign="Right" demandPopin="true">
                        <header>
                            <Text text="Check-in"/>
                        </header>
                    </Column>
                    <Column id="lastNameCol" hAlign="Right" demandPopin="true">
                        <header>
                            <Text text="Check-out"/>
                        </header>
                        <footer>
                            <Text text="Totals:"/>
                        </footer>
                    </Column>
                    <Column id="lastNameCol0" hAlign="Right" demandPopin="true">
                        <header>
                            <Text text="Attended time"/>
                        </header>
                        <footer>
                        </footer>
                    </Column>
                    <Column id="lastNameCol1" hAlign="Right" demandPopin="true">
                        <header>
                            <Text text="Time worked"/>
                        </header>
                        <footer>
                        </footer>
                    </Column>
                    <Column id="addressCol" minScreenWidth="Tablet" demandPopin="true">
                        <header>
                            <Text text="Description"/>
                        </header>
                    </Column>
                    <Column id="cityCol" minScreenWidth="Tablet" demandPopin="true">
                        <header>
                            <Text text="Approval by"/>
                        </header>
                    </Column>
                    <Column id="regionCol" minScreenWidth="Tablet" demandPopin="true">
                        <header>
                            <Text text="Approved at"/>
                        </header>
                    </Column>
                    <Column id="postalCodeCol" minScreenWidth="Tablet" demandPopin="true">
                        <header>
                            <Text text="Remarks"/>
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="item0" type="Navigation" press=".onItemPress">
                        <cells>
                            <Text text="{remoteOData>ProjectCode}"/>
                            <Text text="{ type: 'sap.ui.model.odata.type.DateTimeOffset', formatOptions: { pattern: 'HH:mm' }, path: 'remoteOData>CheckInDateTime' }"/>
                            <Text text="{ type: 'sap.ui.model.odata.type.DateTimeOffset', formatOptions: { pattern: 'HH:mm' }, path: 'remoteOData>CheckOutDateTime' }"/>
                            <ObjectNumber
                                    number="{parts: [ {path: 'remoteOData>CheckInDateTime', type: 'sap.ui.model.type.String'}, {path: 'remoteOData>CheckOutDateTime', type: 'sap.ui.model.type.String'}]}"/>
                            <ObjectNumber
                                    number="{parts: [ {path: 'remoteOData>CheckInDateTime', type: 'sap.ui.model.type.String'}, {path: 'remoteOData>CheckOutDateTime', type: 'sap.ui.model.type.String'}]}"/>
                            <Text text="{remoteOData>Description}"/>
                            <Text text="{remoteOData>ApprovalBy}"/>
                            <Text text="{path: 'remoteOData>ApprovalDateTime', type: 'sap.ui.model.odata.type.DateTimeOffset', formatOptions: {pattern: 'yyyy-MM-dd HH:mm'}}"/>
                            <Text text="{remoteOData>Remarks}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Page>
</mvc:View>